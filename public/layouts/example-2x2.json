{
  "layout_mode": "multi_surface",
  "grid": [2, 2],
  "panes": [
    {
      "id": "tick-pane",
      "title": "Tick Price",
      "row": 0,
      "col": 0,
      "height": 1,
      "width": 1
    },
    {
      "id": "indicators-pane",
      "title": "Indicators",
      "row": 0,
      "col": 1,
      "height": 1,
      "width": 1,
      "overlays": {
        "hline": [
          { "id": "rsi30", "y": 30, "label": "30", "color": "#666666", "style": { "strokeDashArray": [6, 4] } },
          { "id": "rsi70", "y": 70, "label": "70", "color": "#666666", "style": { "strokeDashArray": [6, 4] } }
        ]
      }
    },
    {
      "id": "ohlc-pane",
      "title": "OHLC 1H",
      "row": 1,
      "col": 0,
      "height": 1,
      "width": 1,
      "isBar": true
    },
    {
      "id": "pnl-pane",
      "title": "Strategy PnL",
      "row": 1,
      "col": 1,
      "height": 1,
      "width": 1,
      "isPnL": true,
      "overlays": {
        "hline": [
          { "id": "baseline", "y": 0, "label": "0", "color": "#444444" }
        ]
      }
    }
  ],
  "series": [
    {
      "series_id": "ES.c.0:ticks",
      "pane": "tick-pane",
      "type": "FastLineRenderableSeries",
      "color": "#50C7E0",
      "strokeThickness": 1
    },
    {
      "series_id": "ES.c.0:sma_10",
      "pane": "tick-pane",
      "type": "FastLineRenderableSeries",
      "color": "#F48420",
      "strokeThickness": 1
    },
    {
      "series_id": "ES.c.0:rsi_14",
      "pane": "indicators-pane",
      "type": "FastLineRenderableSeries",
      "color": "#9C27B0",
      "strokeThickness": 1
    },
    {
      "series_id": "ES.c.0:ohlc_time:3600000",
      "pane": "ohlc-pane",
      "type": "FastCandlestickRenderableSeries"
    },
    {
      "series_id": "strat_alpha:pnl",
      "pane": "pnl-pane",
      "type": "FastMountainRenderableSeries",
      "color": "#4CAF50",
      "strokeThickness": 1
    }
  ],
  "minimap": {
    "source": {
      "series_id": "ES.c.0:ticks",
      "yField": "y"
    }
  },
  "strategy_markers": {
    "exclude_panes": ["pnl-pane", "ohlc-pane"]
  },
  "meta": {
    "version": "1.0",
    "name": "2x2 Grid with PnL",
    "description": "Four-pane layout with tick, indicators, OHLC, and PnL"
  }
}
