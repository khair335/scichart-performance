{
  "layout_mode": "multi_surface",
  "grid": [4, 1],
  "xAxis": {
    "defaultRange": {
      "mode": "lastMinutes",
      "value": 5
    }
  },
  "minimap": {
    "source": {
      "series_id": "ES:ticks",
      "yField": "y"
    }
  },
  "panes": [
    {
      "id": "main-chart",
      "row": 0,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "ES Price with Both Strategy Markers"
    },
    {
      "id": "strategy1-pnl-pane",
      "row": 1,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "Strategy Alpha PnL"
    },
    {
      "id": "strategy2-pnl-pane",
      "row": 2,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "Strategy Beta PnL"
    },
    {
      "id": "ohlc-pane",
      "row": 3,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "OHLC Candlesticks"
    }
  ],
  "series": [
    {
      "series_id": "ES:ticks",
      "pane": "main-chart",
      "type": "FastLineRenderableSeries",
      "style": {
        "stroke": "#50C7E0",
        "strokeThickness": 1
      }
    },
    {
      "series_id": "ES:strategy:alpha:markers",
      "pane": "main-chart",
      "type": "strategy_markers",
      "markerStyle": {
        "entryLongColor": "#22c55e",
        "entryShortColor": "#ef4444",
        "markerSize": 12
      }
    },
    {
      "series_id": "ES:strategy:beta:markers",
      "pane": "main-chart",
      "type": "strategy_markers",
      "markerStyle": {
        "entryLongColor": "#3b82f6",
        "entryShortColor": "#f59e0b",
        "markerSize": 10
      }
    },
    {
      "series_id": "ES:strategy:alpha:pnl",
      "pane": "strategy1-pnl-pane",
      "type": "strategy_pnl",
      "pnlStyle": {
        "stroke": "#22c55e",
        "fill": "rgba(34, 197, 94, 0.3)",
        "strokeThickness": 2
      }
    },
    {
      "series_id": "ES:strategy:beta:pnl",
      "pane": "strategy2-pnl-pane",
      "type": "strategy_pnl",
      "pnlStyle": {
        "stroke": "#3b82f6",
        "fill": "rgba(59, 130, 246, 0.3)",
        "strokeThickness": 2
      }
    },
    {
      "series_id": "ES:ohlc_time:10000",
      "pane": "ohlc-pane",
      "type": "FastCandlestickRenderableSeries"
    }
  ],
  "meta": {
    "version": "1.0",
    "description": "Example showing multiple strategies with different colors on the same price chart, each with their own PnL pane. Demonstrates per-strategy color customization."
  }
}
