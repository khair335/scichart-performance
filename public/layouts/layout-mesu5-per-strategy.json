{
  "layout_mode": "multi_surface",
  "grid": [3, 1],
  "xAxis": {
    "defaultRange": {
      "mode": "lastMinutes",
      "value": 5
    }
  },
  "minimap": {
    "source": {
      "series_id": "MESU5:ticks",
      "yField": "y"
    }
  },
  "panes": [
    {
      "id": "main-chart",
      "row": 0,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "MESU5 Price with Strategy 0 Markers"
    },
    {
      "id": "strategy-pnl-pane",
      "row": 1,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "Strategy 0 PnL"
    },
    {
      "id": "ohlc-pane",
      "row": 2,
      "col": 0,
      "height": 1,
      "width": 1,
      "title": "MESU5 OHLC Candlesticks"
    }
  ],
  "series": [
    {
      "series_id": "MESU5:ticks",
      "pane": "main-chart",
      "type": "FastLineRenderableSeries",
      "style": {
        "stroke": "#50C7E0",
        "strokeThickness": 1
      }
    },
    {
      "series_id": "MESU5:sma_10",
      "pane": "main-chart",
      "type": "FastLineRenderableSeries",
      "style": {
        "stroke": "#F48420",
        "strokeThickness": 1
      }
    },
    {
      "series_id": "MESU5:strategy:0:markers",
      "pane": "main-chart",
      "type": "strategy_markers",
      "markerStyle": {
        "entryLongColor": "#22c55e",
        "entryShortColor": "#ef4444",
        "exitLongColor": "#16a34a",
        "exitShortColor": "#dc2626",
        "markerSize": 12,
        "showLabels": false
      }
    },
    {
      "series_id": "MESU5:strategy:0:pnl",
      "pane": "strategy-pnl-pane",
      "type": "strategy_pnl",
      "pnlStyle": {
        "stroke": "#22c55e",
        "fill": "rgba(34, 197, 94, 0.3)",
        "strokeThickness": 2,
        "positiveColor": "#22c55e",
        "negativeColor": "#ef4444"
      }
    },
    {
      "series_id": "MESU5:ohlc_time:10000",
      "pane": "ohlc-pane",
      "type": "FastCandlestickRenderableSeries"
    }
  ],
  "meta": {
    "version": "1.0",
    "description": "MESU5 layout showing only strategy 0. Demonstrates per-strategy control - other strategies are ignored."
  }
}
